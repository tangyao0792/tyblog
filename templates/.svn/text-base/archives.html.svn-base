{% if total != 0 %}
    <a href="/archives/0">首页</a>
    {% if now < total %}
        <a href="/archives/?page={{now+1}}">下一页</a>
    {% end %}
    {% for i in range (0, total+1) %}
        {% if i == now %}
            <U><a href="/archives/?page={{i}}">{{i}}</a></U>
        {% else %}
            <a href="/archives/?page={{i}}">{{i}}</a>
        {% end %}
    {% end %}
    {% if now > 0 %}
        <a href="/archives/?page={{now-1}}">上一页</a>
    {% end %}
    <a href="/archives/?page={{total}}">尾页</a>
{% end %}
  
